<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <include layout="@layout/tool_bar"></include>


    <ImageView
        android:id="@+id/home_background"
        android:layout_width="410dp"
        android:layout_height="870dp"
        android:src="@drawable/gray"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="@id/home_background"
        android:layout_marginTop="280dp"
        app:layout_constraintStart_toStartOf="@id/home_background"
        android:layout_marginStart="100dp"
        android:src="@drawable/graypanda"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@id/home_background"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="@id/home_background"
        android:layout_marginStart="0dp"
        android:text="    감염병 정보"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawableTop="@drawable/info"
        android:backgroundTint="#00FFFFFF"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="420dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        android:layout_marginTop="170dp"
        app:layout_constraintStart_toStartOf="@id/btn_1"
        android:layout_marginLeft="-15dp"
        android:text="   질병 리뷰"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawableTop="@drawable/review"
        android:backgroundTint="#00FFFFFF"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/btn_3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@id/btn_1"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="@id/btn_1"
        android:layout_marginStart="240dp"
        android:text="    감염병 확인"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawableTop="@drawable/check"
        android:backgroundTint="#00FFFFFF"
        style="@style/Widget.AppCompat.Button.Borderless"/>


</androidx.constraintlayout.widget.ConstraintLayout>